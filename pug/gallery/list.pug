| {{ define "section_content" }}
.section#content
    | {{ .Content }}
    ul
        |
        | {{ $name := .Site.Params.galleryFolder | default "images/"}}
        | {{ $path := "gallery/" }}
        | {{ $content := "/content/" }}
        | {{ $src := (print $path $name) }}
        |
        | {{ $folder := (print $content $path $name) }}
        |
        | {{ $files := readDir $folder }}
        | {{ range shuffle $files }}
        | {{ if .IsDir }}
        li
            a(href='{{ $src | absURL }}{{ .Name }}') {{ .Name }}
        | {{ end }}
        | {{ end }}
| {{ end }}